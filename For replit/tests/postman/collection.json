{
  "info": {
    "name": "H&W Defect Tracking",
    "_postman_id": "hw-defects-collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{base}}/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\"full_name\": \"Bob Jones\", \"password\": \"pass123\"}"
        }
      }
    },
    {
      "name": "Dashboard Counts",
      "request": {
        "method": "GET",
        "url": "{{base}}/dashboard/counts"
      }
    },
    {
      "name": "Urgency Distribution",
      "request": {
        "method": "GET",
        "url": "{{base}}/dashboard/urgency-distribution"
      }
    },
    {
      "name": "Status Distribution",
      "request": {
        "method": "GET",
        "url": "{{base}}/dashboard/status-distribution"
      }
    },
    {
      "name": "Work Hours",
      "request": {
        "method": "GET",
        "url": "{{base}}/dashboard/work-hours"
      }
    }
  ],
  "variable": [
    {
      "key": "base",
      "value": "http://localhost:8080"
    }
  ]
}